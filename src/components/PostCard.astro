---
import { Image } from 'astro:assets';
import Link from './Link.astro';
import { slugify, formatDate } from '../js/utils';

const { frontmatter, url, tagType } = Astro.props;
const Tag = tagType;
const { title, date, author, image, description, category } = frontmatter;
---

<article class="card">
  <a
    href={url}
    aria-hidden="true"
    tabindex="-1"
  >
    <Image
      src={image.src}
      alt={image.alt}
      width="400"
      height="250"
      format="webp"
      quality={80}
      class="hero-image"
    />
  </a>
  <div class="content">
    <small>
      <a
        href={`/category/${slugify(category)}/`}
        class="badge"
        >{category}</a
      >
    </small>
    <div>
      <Tag>
        <a
          class="title"
          href={url}
          >{title}</a
        >
      </Tag>
      <small>
        por <a href={`/author/${slugify(author)}/`}>{author}</a> â€¢ {
          formatDate(date)
        }
      </small>
    </div>
    <p>{description}</p>
    <Link
      href={url}
      text="Leer Post"
      style="secondary"
    />
  </div>
</article>

<style>
  .card {
    display: flex;
    flex-direction: column;
    background-color: #1e293b;
    padding: 0;
    border-radius: 8px;
    /* box-shadow: var(--shadow-sm); */
    overflow: hidden;
    max-width: 300px;
    color: var(--font);
  }
  .card img {
    object-fit: cover;
    width: 100%;
    height: 100%;
    box-shadow: none;
    border-radius: none;
    /* box-shadow: var(--shadow-sm); */
  }

  .title {
    font-weight: 500;
    font-size: 1.3em;
  }
  .content {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    padding: 1rem;
    height: 100%;
  }
  a {
    color: var(--front);
  }
  a:hover {
    color: var(--accent);
  }
  .content p {
    height: 100%;
  }
  .content > a {
    align-self: flex-end;
  }
  .badge {
    padding: 4px 10px;
    background-color: var(--muted);
    border-radius: 20px;
    color: var(--accent);
    text-decoration: none;
    letter-spacing: 0.054em;
    text-transform: uppercase;
    font-size: var(--fs-sm);
  }

  .badge:hover {
    color: var(--font);
    opacity: 0.8;
  }

  .badge:focus-visible {
    box-shadow:
      0 0 0 0.2em hsl(var(--bkg)),
      0 0 0 0.4em hsl(var(--accent));
  }
</style>
