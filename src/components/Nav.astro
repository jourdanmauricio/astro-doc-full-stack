---
import { Icon } from 'astro-icon/components';
import navData from './../data/navData';
---

<nav class="navbar">
  <a
    href="/"
    class="logo"
    aria-label="Go home"
  >
    <Icon
      class="logo"
      name="code"
    />
  </a>
  <ul class="menu">
    {navData.map((item) => <a href={item.path}>{item.name}</a>)}
  </ul>
</nav>

<style>
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2rem;
    margin-inline: auto;
    /* padding-inline: var(--space-md); */
  }

  .menu {
    display: flex;
    gap: 2rem;
    & a {
      text-decoration: none;
      color: var(--front);
      font-size: 1.4em;
    }
  }

  .logo {
    width: 40px;
    height: 40px;
  }
</style>
<script>
  import '../js/nav.js';
</script>
